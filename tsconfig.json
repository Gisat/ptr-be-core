{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/*"], 
      "@test/*": ["tests/*"]
    },
    "types": [
      "node",
      "vitest/globals",
    ],
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}