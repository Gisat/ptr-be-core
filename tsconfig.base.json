{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext"],
    "isolatedModules": true,
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@core/*": [
        "src/*"
      ],
      "@test/*": [
        "tests/*"
      ]
    },
  },
  "include": [
    "**/*"
  ],
}