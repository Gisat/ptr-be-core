{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "emitDeclarationOnly": false,
    "stripInternal": true,
    "removeComments": false,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "baseUrl": ".",
    "isolatedModules": true,
    "paths": {
      "@core/*": [
        "src/*"
      ],
      "@test/*": [
        "tests/*"
      ]
    },
  },
  "include": [
    "**/*"
  ],
}